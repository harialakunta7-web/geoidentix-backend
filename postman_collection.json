{
  "info": {
    "name": "Smart Attendance Management API",
    "description": "Complete API collection for Smart Attendance Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    },
    {
      "key": "tenantId",
      "value": ""
    },
    {
      "key": "employeeId",
      "value": ""
    },
    {
      "key": "locationToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Tenant",
      "item": [
        {
          "name": "Register Tenant",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.data.refreshToken);",
                  "    pm.collectionVariables.set('tenantId', response.data.tenantId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenantName\": \"Acme Corporation\",\n  \"gst\": \"29ABCDE1234F1Z5\",\n  \"address\": \"123 Business Park, Tech City, Karnataka\",\n  \"longitude\": 77.5946,\n  \"latitude\": 12.9716,\n  \"username\": \"acme_admin\",\n  \"password\": \"SecurePass@123\",\n  \"planType\": \"FREE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tenants/register",
              "host": ["{{baseUrl}}"],
              "path": ["tenants", "register"]
            }
          }
        },
        {
          "name": "Login Tenant",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.data.refreshToken);",
                  "    pm.collectionVariables.set('tenantId', response.data.tenantId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"acme_admin\",\n  \"password\": \"SecurePass@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tenants/login",
              "host": ["{{baseUrl}}"],
              "path": ["tenants", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.data.refreshToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tenants/refresh-token",
              "host": ["{{baseUrl}}"],
              "path": ["tenants", "refresh-token"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/tenants/profile",
              "host": ["{{baseUrl}}"],
              "path": ["tenants", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenantName\": \"Acme Corporation Updated\",\n  \"address\": \"New Address\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tenants/profile",
              "host": ["{{baseUrl}}"],
              "path": ["tenants", "profile"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tenants/logout",
              "host": ["{{baseUrl}}"],
              "path": ["tenants", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Employee",
      "item": [
        {
          "name": "Register Employee",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('employeeId', response.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"photoUrl\": \"https://example.com/photos/john.jpg\",\n  \"embedding\": [0.123, 0.456, 0.789, 0.321, 0.654],\n  \"salary\": 50000.00,\n  \"emergencyContactNumber\": \"9876543210\",\n  \"contactNumber\": \"9123456789\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/employees",
              "host": ["{{baseUrl}}"],
              "path": ["employees"]
            }
          }
        },
        {
          "name": "List Employees",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/employees?page=1&limit=10&search=",
              "host": ["{{baseUrl}}"],
              "path": ["employees"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "search",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Get Employee Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/employees/{{employeeId}}",
              "host": ["{{baseUrl}}"],
              "path": ["employees", "{{employeeId}}"]
            }
          }
        },
        {
          "name": "Update Employee",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"salary\": 55000.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/employees/{{employeeId}}",
              "host": ["{{baseUrl}}"],
              "path": ["employees", "{{employeeId}}"]
            }
          }
        },
        {
          "name": "Delete Employee",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/employees/{{employeeId}}",
              "host": ["{{baseUrl}}"],
              "path": ["employees", "{{employeeId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Attendance",
      "item": [
        {
          "name": "Location Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 && pm.response.json().success) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('locationToken', response.locationToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employeeId\": \"{{employeeId}}\",\n  \"latitude\": 12.9800,\n  \"longitude\": 77.6000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/attendance/location-check",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "location-check"]
            }
          }
        },
        {
          "name": "Check-In",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employeeId\": \"{{employeeId}}\",\n  \"photoUrl\": \"https://example.com/photos/checkin.jpg\",\n  \"embedding\": [0.123, 0.456, 0.789, 0.321, 0.654],\n  \"locationToken\": \"{{locationToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/attendance/check-in",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "check-in"]
            }
          }
        },
        {
          "name": "Get Employee Attendance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/attendance/employee/{{employeeId}}?startDate=2024-01-01&endDate=2024-12-31&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "employee", "{{employeeId}}"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Attendance Report",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/attendance/report?startDate=2024-01-01&endDate=2024-12-31&employeeId={{employeeId}}",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "report"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                },
                {
                  "key": "employeeId",
                  "value": "{{employeeId}}"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
